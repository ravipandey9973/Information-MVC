@{
}
@model Information.Models.StudentViewModel
<h1>Student Details</h1>
<form method="post">
    <div class="mt-3 ">
        <label class="form-label">Name</label>
        <input type="text"  class="form-control" placeholder="Enter Name" asp-for="Name"/>
    </div>

    <div class="mt-3 ">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="Enter Email" asp-for="Email" />
    </div>

    <div class="mt-3 ">
        <label class="form-label">Domain</label>
        <input type="text" class="form-control" placeholder="Enter Phone" asp-for="Domain" />
    </div>

    <div class="mt-3 ">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label">Subscribed</label>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
